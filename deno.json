{
  "name": "@ankarhem/secrecy-ts",
  "version": "0.1.0",
  "description": "A TypeScript port of the Rust secrecy crate. Wrap secrets in a type to ensure they are not exposed.",
  "exports": "./mod.ts",
  "tasks": {
    "dev": "deno test --watch --allow-all"
  },
  "license": "MIT",
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.41.3",
    "@std/assert": "jsr:@std/assert@^1.0.7",
    "@std/testing": "jsr:@std/testing@^1.0.4"
  },
  "compilerOptions": {
    "checkJs": true
  },
  "test": {
    "include": ["tests/**/*_test.ts"]
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "useTabs": false
  },
  "runtimes": {
    "deno": ">=2",
    "node": ">=20"
  }
}
